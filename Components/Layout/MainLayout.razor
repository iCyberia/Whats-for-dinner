@inherits LayoutComponentBase
@inject IJSRuntime JS

<div class="d-flex">
    <!-- Sidebar (NavMenu) -->
    <div class="sidebar">
        <NavMenu />
    </div>

    <!-- Main Content Area -->
    <main class="content">
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    <p>An unhandled error has occurred.</p>
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    private async Task ToggleTheme()
    {
        // Calls the JavaScript function to toggle the theme
        await JS.InvokeVoidAsync("toggleTheme");
    }
}
